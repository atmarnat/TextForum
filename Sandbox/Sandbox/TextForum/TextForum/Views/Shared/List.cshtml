<div>
    @Html.Partial("NavMenu")
</div>

<div style="text-align: center">
    <h1>@Model.CurrentTopicName</h1>
</div>


<div style="text-align: center">
    Create
    @Html.Partial("Create", new TextForum.Models.Post())
</div>

