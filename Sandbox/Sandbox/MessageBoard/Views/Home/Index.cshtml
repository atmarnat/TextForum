@model IEnumerable<MessageBoard.Models.PostViewModel>

@{
    ViewData["Title"] = "Index";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/css/stylesMenu.css")" rel="stylesheet" type="text/css" />
    <link href="~/css/stylesInput.css" rel="stylesheet" />
    <link href="~/css/styleMessage.css" rel="stylesheet" />
    <script src="~/js/menu.js"></script>

</head>

<h2>Index</h2>
<!-- Begin messagebox input -->
<div style="text-align: center"> Create Message</div>
<form action="/action_page.php">
    <table width="30%" align="center" border="1">
        <tr>
            <td width="25%">Name</td>
            <td width="75%"><input type="text" name="fullname" style="width:72%"><input type="submit" value="Submit" style="width:28%"><br></td>
        </tr>
        <tr>
            <td width="25%">Message</td>
            <td width="75%">
                <textarea rows="4" cols="30"></textarea>
            </td>
        </tr>
        <!-- 
        <tr>
            <td width="25%">Upload</td>
            <td width="75%"><input type="file" style="width:100%"></td>
        </tr>
            -->
    </table>
</form>
<br />
<!-- End messagebox input -->


<hr />
@foreach (var item in Model)
{
    <div class="divFirst">
        <div class="divImg">
            <img class="imageAvatar" src="~/pictures/avatar.png" />
        </div>
        <div class="divWrapper">
            <table style="width:100%">
                <tr>
                    <td class="tdCheck"><input type="checkbox" name="#" value="#" checked><br></td>
                    <th class="tdOther">[@Html.DisplayFor(modelItem => item.user)] [@Html.DisplayFor(modelItem => item.created)] [<a href="#">@Html.DisplayFor(modelItem => item.postID)</a>]</th>
                </tr>
                <tr>
                    <td></td>
                    <td class="tdOther">@Html.DisplayFor(modelItem => item.content)</td>
                </tr>
            </table>
        </div>
    </div>
    <hr />
}