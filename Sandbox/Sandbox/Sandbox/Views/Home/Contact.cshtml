
@{
    ViewBag.Title = "Contact";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/stylesMenu.css" rel="stylesheet" />
    <link href="@Url.Content("~/css/stylesHome.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <!-- Beginning of the header for all files -->
    <div class="menuContainer">
        <div class="menuBlock" style="vertical-align:top">
            <!-- button gotten from W3Schools -->
            <div>
                <img src="~/pictures/avatar.png" style="width:80px;height:80px;" />
            </div>
            <div>
                <button onclick="document.getElementById('id01').style.display='block'" style="width:80px;">Login</button>

                <div id="id01" class="modal">

                    <form class="modal-content animate" action="/action_page.php">
                        <div class="imgcontainer">
                            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
                            <img src="~/pictures/avatar.png" alt="Avatar" class="avatar">
                        </div>

                        <div class="container">
                            <label for="uname"><b>Username</b></label>
                            <input type="text" placeholder="Enter Username" name="uname" style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;" required>

                            <label for="psw"><b>Password</b></label>
                            <input type="password" placeholder="Enter Password" name="psw" style="width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;box-sizing: border-box;" required>

                            <button type="submit">Login</button>
                            <label>
                                <input type="checkbox" checked="checked" name="remember"> Remember me
                            </label>
                        </div>

                        <div class="container" style="background-color:#f1f1f1">
                            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
                            <span class="psw">Forgot <a href="#">password?</a></span>
                        </div>
                    </form>
                </div>
                <!-- End of button-->
            </div>
        </div>
        <div class="menuBlock">
            <h1 align="center">Contact</h1>
        </div>
        <div class="menuBlock" style="vertical-align:top">
            <!-- Start of menu-->
            <div class="dropdown" style="float: right">
                <button class="dropbtn">Menu</button>
                <div class="dropdown-content">
                    <a href="~/Home/Index">Home</a>
                    <a href="~/Home/About">About</a>
                    <a href="~/Home/News">News</a>
                    <a href="~/Home/Contact">Contact</a>
                </div>
            </div>
            <!-- end of menu -->
        </div>
    </div>

    <!-- End of the header for all files -->
    <br />
    <div class="containerMain">
        <div class="modified" style="display: inline-block; text-align:left; width: 80%">
            <p style="font-size: 12px">
                Thank you for taking an interest in reaching out to us!
            </p>
            <p style="font-size: 12px">
                Please note: We may not respond right away, so please be patient when sending an email. We will get back to you as soon as we can.
            </p>
            <p style="font-size: 12px">
                Please follow the following formats in order for us to properly handle your requests. Otherwise, we may just ignore them
            </p>
            <hr />
            <h4>Requesting an account:</h4>
            <ul style="font-size: 12px">
                <li><b>To:</b> twattlecate@outlook.com</li>
                <li><b>Subject:</b> Account Request</li>
                <li><b>Body:</b> Full name, some desired usernames (in order of preference), and a reason that you want an account.</li>
                <li><b>Attachment:</b> Picture that you want for your profile picture. If you do not provide one, a default one will be provided.</li>
            </ul>
        </div>
    </div>

    <div style="text-align:center;">
        <br />
        <p style="font-size: 10px">This website was created in 2019 for the MSSA CAD Cohort</p>
    </div>
    <div align="center">
        <form action="~/Home/Index">
            <button type="submit">Home</button>
        </form>
    </div>
</body>
</html>


