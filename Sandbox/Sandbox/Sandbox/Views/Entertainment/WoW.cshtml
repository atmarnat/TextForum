
@{
    ViewBag.Title = "Entertainment";
    Layout = "~/Views/Shared/_DiscussionLayout.cshtml";
}

@section pageName{
    <h1 align="center">Entertainment</h1>
}


<body>
    <div class="divFirst">
        <div class="divImg">
            <img class="imageAvatar" src="~/pictures/avatar.png" />
        </div>
        <div class="divWrapper">
            <table style="width:100%">
                <tr>
                    <td class="tdCheck"><input type="checkbox" name="#" value="#" checked><br></td>
                    <th class="tdOther">[Anonymous] [date/time] [<a href="#">4</a>]</th>
                </tr>
                <tr>
                    <td></td>
                    <td class="tdOther">What does everyone think of classic?</td>
                </tr>
            </table>
        </div>
    </div>

    <br />

    <!-- LEarning about scripting input-->
    <p>Click the button to demonstrate the prompt box.</p>

    <button onclick="myFunction()">Try it</button>

    <p id="demo"></p>

    <script>
function myFunction() {
  var person = prompt("Please enter your name", "Anonymous");
  if (person != null) {
    document.getElementById("demo").innerHTML =
    "Hello " + person + "! How are you today?";
  }
}
    </script>
    <!-- end scripting text-->
    <div class="divReply">
        <div class="divImg">
            <img class="imageAvatar" src="~/pictures/avatar.png" />
        </div>
        <div class="divWrapper">
            <table style="width:100%">
                <tr>
                    <td class="tdCheck"><input type="checkbox" name="#" value="#" checked><br></td>
                    <th class="tdOther">[$username] [date/time] [<a href="#">5</a>]</th>
                </tr>
                <tr>
                    <td></td>
                    <td class="tdOther">I play a warlock</td>
                </tr>
            </table>
        </div>
    </div>
</body>
