<div class="bg-info p-2 row">
    <div class="col">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-sm btn-primary"
           asp-action="Logout" asp-controller="Account">Log Out</a>
    </div>
</div>

<table>
    <tr>
        <th>ID</th>
        <th>Content</th>
        <th>Action</th>
    </tr>

    @foreach (var post in Model.Posts)
    {
        <tr>
            <td>@post.PostID</td>
            <td>@post.Content</td>
            <td>
                <form asp-action="DeleteP" method="POST">
                    <input type="hidden" name="PostID" value="@post.PostID" /><button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>


<table>
    <tr>
        <th>ID</th>
        <th>Content</th>
        <th>Action</th>
    </tr>

    @foreach (var post in Model.Replies)
    {
        <tr>
            <td>@post.PostID</td>
            <td>@post.Content</td>
            <td>
                <form asp-action="DeleteR" method="POST">
                    <input type="hidden" name="PostID" value="@post.ReplyID" /><button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
