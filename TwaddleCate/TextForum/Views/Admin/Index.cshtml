<h1>Admin Index</h1>
<hr />
@if (User.IsInRole("Admin"))
{
    <p>
        [<a asp-controller="Admin" asp-action="CreateRole">Create Role</a>]
        [<a asp-controller="Admin" asp-action="ListRoles">List Roles</a>]
        [<a asp-controller="Admin" asp-action="ListUsers">List Users</a>]
    </p>
    <hr />
}

<h3>Posts List</h3>
<hr />

<table style="text-align: left; border-collapse: collapse;">
    <tr>
        <th>Picture</th>
        <th>ID</th>
        <th>Topic</th>
        <th>User</th>
        <th>Content</th>
        <th>Action</th>
    </tr>

    @foreach (var post in Model.Posts)
    {
        <tr style="border: 1px solid black;">
            <td>
                @if (post.ImgUrl != null)
                {
                    @if (@post.ImgUrl.Contains("webm"))
                    {
                        <video class="thumbnail" controls>
                            <source src="https://imgrepository.blob.core.windows.net/images/@post.ImgUrl" type="video/webm" />
                        </video>
                    }
                    else
                    {
                        <img class="thumbnail" src="https://imgrepository.blob.core.windows.net/images/@post.ImgUrl">
                    }
                }
            </td>
            <td>@post.PostID</td>
            <td>@post.TopicID</td>
            <td>@post.UserName</td>
            <td>@post.Content</td>
            <td>
                <form asp-action="DeleteP" method="POST">
                    <input type="hidden" name="PostID" value="@post.PostID" /><button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<hr />
