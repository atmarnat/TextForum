@model TextForum.Models.Replies

@{
    string tID = (string)ViewContext.RouteData.Values["id"];
}


<div style="align-content: center; width: auto">
    <form asp-action="Reply" asp-controller="Replies" method="POST" enctype="multipart/form-data">
        @if (User.Identity.IsAuthenticated)
        {
            <input type="hidden" id="UserName" name="UserName" value=@User.Identity.Name>
        }
        else
        {
            <input type="hidden" id="UserName" name="UserName" value="anonymous">
        }
        <input type="hidden" id="PostID" name="PostID" value=@Int32.Parse(tID)>
        <input type="hidden" id="custId" name="custId" value=DateTime.UtcNow>
        <table class="ctable">
            <tbody>
                <tr>
                    <td class="desc" style="height: 100%">Content</td>
                    <td><textarea asp-for="Content"  placeholder="Required.." style="width:100%; height: 100px;">Content: </textarea></td>
                </tr>
                <tr>
                    <td class="desc">File</td>
                    <td><input type="file" id="ImgUrl" name="imgUrl" /> <button type="submit" style="width: auto; text-align: right">Post</button></td>
                </tr>
            </tbody>
        </table>
    </form>
</div>